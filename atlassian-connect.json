{
  "key": "my-add-on",
  "name": "Hello!",
  "description": "My very first HipChat add-on",
  "vendor": {
    "name": "Rita Zhang",
    "url": "https://www.hipchat.com"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "http://abotars.hipch.at/meeple/ritazh",
        "url@2x": "http://abotars.hipch.at/meeple/ritazh"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": {
      "url": "{{localBaseUrl}}/webhook",
      "pattern": ".*",
      "event": "room_message",
      "name": "all_messages",
      "authentication": "jwt"
    }
  }
}
